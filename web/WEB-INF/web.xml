<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>servletMantenimientoHoteles</servlet-name>
        <servlet-class>servlets.ServletMantenimientoHotelesModificar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarHotel</servlet-name>
        <servlet-class>servlets.EliminarHotel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarHotel</servlet-name>
        <servlet-class>servlets.AgregarHotel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPromocion</servlet-name>
        <servlet-class>servlets.ServletPromocion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletHabitacion</servlet-name>
        <servlet-class>servlets.ServletHabitacion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletMantenimientoHoteles</servlet-name>
        <url-pattern>/servletMantenimientoHoteles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarHotel</servlet-name>
        <url-pattern>/EliminarHotel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarHotel</servlet-name>
        <url-pattern>/AgregarHotel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPromocion</servlet-name>
        <url-pattern>/ServletPromocion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletHabitacion</servlet-name>
        <url-pattern>/ServletHabitacion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
